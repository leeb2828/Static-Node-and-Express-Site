extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Lee Haney's JavaScript Portfolio 

      p.lead.text-light
        | These are the projects I built while enrolled in the Team Treehouse Full Stack JavaScript Techdegree program. 
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`project/${project.id}`, target="_blank")
            img.thumbnail(src=`${project.image_urls[0]}`)
            h5 #{project.project_name}

      
